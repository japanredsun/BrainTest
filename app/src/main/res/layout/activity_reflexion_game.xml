<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rltLG1"
    tools:context="jrgroup.braintest.ReflexionGameActivity"
    >

    <TextView
        android:id="@+id/txtHienThiG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btWrongG1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="@string/txtHienThi"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btWrongG1"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/btTrueG1"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/btTrueG1"
        android:layout_toRightOf="@+id/btTrueG1"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/sai" />

    <ImageButton
        android:id="@+id/btPauseG1"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar"
        app:srcCompat="@drawable/pauseicon" />

    <ImageButton
        android:id="@+id/btTrueG1"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="86dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/dung" />

    <TextView
        android:id="@+id/txtDiemG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtHienThiG1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/txtDiem"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="30dip"
        android:progressDrawable="@drawable/myprogressbar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDiemG1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtDiemG1"
        android:layout_marginBottom="29dp"
        android:text="TextView"
        android:visibility="invisible"/>


</RelativeLayout>
